<% include ../partials/headerMaquinas %>
    
    <div class=" mt-5 mb-3">
        <div class="row">
            <div class="col-12 ">
                <h1 class="text-center">Nova Máquina</h1>
                <div class="d-flex justify-content-center">
                    <p class="text-dark bg-warning btn-padrao px-2 py-1">*Somente os conteudos preechidos serão vizualizados</p>
                </div>
                
            </div>
        </div>
    </div>
    <div class="container">
        <form action="/maquinas/vermais/<%=id%>/nova" method='POST' enctype="multipart/form-data"> 
            <div class="form-group">
                <label for="novoNome">Nome:</label>
                <input type="text" name="novoNome" id="novoNome" class="form-control">
            </div>
            <% for(var i =0; i<8; i++){ %>
            
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label for="nomeCampo<%=i%>">Titulo do Campo <%=i+1%></label>
                        <input type="text" name="nomeCampo<%=i%>" id="nomeCampo<%=i%>" class="form-control">
                    </div>
                    <div class="col-6">
                        <label for="novoCampo<%=i%>">Conteudo do Campo <%=i+1%></label>
                        <input type="text" name="novoCampo<%=i%>" id="novoCampo<%=i%>" class="form-control">
                    </div>
                </div>
                
            </div>

            <%}%>
            <div class="form-group">
                <label for="newImage">Imagem:</label>
                <input type="file" class="form-control-file" accept="image/*" required name="newImage" id="newImage">
            </div>
        <button type="submit" class="btn btn-success">Enviar</button>
        </form>
    </div>
    

<% include ../partials/footer %>