<% include ../partials/headerMaquinas %>
    
    <div class="container d-flex justify-content-center mt-5 mb-3">
        <h1>Editar MÃ¡quina</h1>
    </div>
    <div class="container">
        <form action="/maquinas/vermais/<%=id_categoria%>/<%=id%>?_method=PUT" method='POST' enctype="multipart/form-data"> 
            <div class="form-group">
                <label for="editNome">Nome:</label>
                <input type="text" name="editNome" id="editNome" class="form-control" value="<%=dataMaquina[0]['nome']%>">
            </div>
            <% for(var i =0; i<dataCampos.length; i++){ %>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label for="editNomeCampo<%=i%>">Titulo do Campo <%=i+1%></label>
                        <input type="text" name="editNomeCampo<%=i%>" id="editNomeCampo<%=i%>" class="form-control" value="<%=dataCampos[i]['nome']%>">
                    </div>
                    <div class="col-6">
                        <label for="editCampo<%=i%>">Conteudo do Campo <%=i+1%></label>
                        <input type="text" name="editCampo<%=i%>" id="editCampo<%=i%>" class="form-control" value="<%=dataCampos[i]['campo']%>">
                    </div>
                </div> 
                
                
            </div>

            <%}%>


            <div class="form-group">
                <label for="editImage"></label>Imagem:</label>
                <input type="file" accept="image/*" class="form-control-file" required name="editImage" id="editImage" value="<%= dataCampos[0]['imagem'] %>">
            </div>
        <button type="submit" class="btn btn-success">Enviar</button>
        </form>
    </div>
    

<% include ../partials/footer %>