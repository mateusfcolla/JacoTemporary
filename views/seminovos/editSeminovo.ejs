<% include ../partials/headerSeminovos %>

<div class="container d-flex justify-content-center">
    <h1>Editar Categoria</h1>
    <a href="/maquinas">Voltar</a>
</div>
<div class="container">
        <form action="/seminovos/<%=seminovo[0]['id_seminovo']%>/edit?_method=PUT" method='POST' enctype="multipart/form-data"> 
            <div class="form-group">
                <label for="editNome">Nome:</label>
                <input type="text" name="editNome" id="editNome" class="form-control" value="<%=seminovo[0]['nome']%>">
            </div>
            <div class="form-group">
                    <label for="editAno">Ano:</label>
                    <input type="text" name="editAno" id="editAno" class="form-control" value="<%=seminovo[0]['ano']%>">
            </div>
            <div class="form-group">
                    <label for="editPreco">Preço:</label>
                    <input type="text" name="editPreco" id="editPreco" class="form-control" value="<%=seminovo[0]['preco']%>">
            </div>
            <div class="form-group">
                    <label for="editDescricao">Descrição:</label>
                    <textarea type="textarea" name="editDescricao" id="editDescricao" class="form-control" rows="4"><%=seminovo[0]['descricao']%></textarea>
            </div>
            <div class="form-group">
                <label for="editImage">Imagem:</label>
                <input type="file" accept="image/*" class="form-control-file" required name="editImage" id="editImage" value="<%= seminovo[0]['imagem'] %>">
            </div>
        <button type="submit" class="btn btn-success">Enviar</button>
        </form>
</div>

<% include ../partials/footer %>