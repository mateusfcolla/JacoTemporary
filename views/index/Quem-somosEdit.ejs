
    <% include ../partials/headerSobre %>

    <!-- CONTAINER -->
    <form action="/quemSomos?_method=PUT" method="post">
        <div class="row d-flex justify-content-center m-0">
                <div class="col-12 p-0">
                        <button class="btn-warning btn d-block btn-enviar">Enviar</button>
                </div>
        </div>
    <div class="container-fluid">


        
        <!-- ARTIGO -->
        <section>

            <div class="jumbotron text-center" id="jumbotron-quemsomos">

                <h1 class="display-2 d-none d-lg-block"> <strong> <input type="text" name="jbtTitulo" value="<%=data[0]['jbtTitulo']%>"> </strong></h1>
                <h1 class="display-5 d-lg-none"> <strong> <%=data[0]['jbtTitulo']%> </strong></h1>
                <h2 class="display-5">- <i class="fas fa-users icone-quemsomos" id=""></i> -</h2>
                <h2 class="display-5">- <textarea name="jbtDescricao" rows="2"><%=data[0]['jbtDescricao']%></textarea> -</h2>

            </div>
            <div class="container">
                <!--======INTRO===== -->
                <div class="row">
                    <div class="col-md-8">
                        <p class="py-2"><textarea name="starText1" rows="10" cols=70><%=data[0]['starText1']%></textarea></p>
                        <p class="py-2"><textarea name="starText2" rows="10" cols=70><%=data[0]['starText2']%></textarea></p>
                    </div>
                    <div class="col-md-4">
                        <img class="quemsomos-imagem" src="https://www.jacolocadora.com.br/uploads/files/conteudo/1_capa/banner1.fw.png" alt="">
                    </div>
                </div>
                <!-- ===== NOSSA MISSÃO ===== -->
                <section id="nossa-missao-secao">
                    <div class="row mt-4 d-flex justify-content-center my-5">
                        <div class="col-12 d-flex justify-content-center">
                            <h3 class="display-5 texto-destaque pb-1"> <strong>- <input type="text" name="NMTitulo" value="<%=data[0]['NMTitulo']%>"> -</strong></h3>
                        </div>
                        <div class="col-12 d-flex justify-content-center px-5">
                            <p class="px-5 text-center"><i><textarea name="NMDescricao" cols=70 rows="10"><%=data[0]['NMDescricao']%></textarea></i></p>
                        </div>
                    </div>
                </section>

                <!-- ===== COMPROMISSO COM OS CLIENTES ===== -->
                <section class="compromisso">
                    <div class="row ">
                        <div class="col-4  d-none d-xl-block">
                            <img class="compromisso-imagem" src="https://www.jacolocadora.com.br/uploads/files/conteudo/1/IMG-20160527-WA0015.jpg" alt="">
                        </div>
                        <div class="col-md-8 col-12">
                            <h3 class="display-5 texto-destaque mb-3 text-center text-md-left"> <strong>- <input type="text" value="<%=data[0]['BFBTitulo']%>" name="BFBTitulo" class="w-100"> </strong></h3>
                            <p class="ml-3 pr-5"><textarea cols=70 name="BFBTDescricao" rows="10"><%=data[0]['BFBTDescricao']%></textarea></p>
                        </div>
                    </div>
                </section>

                <!-- ===== MENSAGEM DA DIREÇÃO DA EMPRESA ===== -->
                <section class="compromisso">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-center text-center text-md-left">
                            <h3 class="display-5 texto-destaque pb-3 text-center text-md-left"> <strong>- <input type="text" value="<%=data[0]['bottomTextitulo']%>" class="w-100" name="bottomTextitulo"> -</strong></h3>
                        </div>
                        <div class="col-12 d-flex justify-content-center px-5">
                            <p class="px-5 text-center direcao-texto">
                                <i><textarea name="bottomText" cols=70 rows="10"><%=data[0]['bottomText']%></textarea></i>
                            </p>
                        </div>
                    </div>
                </section>
            </div>

        </section>
        <div class="row d-flex justify-content-center m-0">
                <div class="col-12 p-0">
                        <button class="btn-warning btn d-block btn-enviar">Enviar</button>
                </div>
        </div>
    </form>

<% include ../partials/footer %>